<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.project_fundizzy.mapper.BankMapper">
	<select id="selectTokenInfo" resultType="bankToken">
		SELECT *
		FROM bank_access_token
		WHERE email = #{email}
	</select>
	
	<select id="selectAccessToken" resultType="String">
		SELECT *
		FROM bank_access_token
		WHERE user_seq_no = #{token.user_seq_no}
	</select>
	
	<insert id="insertAccessToken">
		<selectKey order="BEFORE" keyProperty="idx" resultType="int">
			SELECT IFNULL(MAX(idx), 0)
			FROM bank_access_token
		</selectKey>
		INSERT INTO bank_access_token
		VALUES(
			    #{idx} + 1,
			    #{email},
			    #{token.user_seq_no},
			    #{token.access_token},
			    #{token.token_type},
			    #{token.expires_in},
			    #{token.refresh_token},
			    #{token.scope}
		)
	</insert>
<!-- 	<update id=""></update> -->





<!-- MyPage 관련 코드들 - 페이 -->
	<select id="selectDBTransactionResult" resultType="map">
		SELECT *
		FROM bank_transaction_info
		WHERE bank_tran_id = #{bank_tran_id}
	</select>
	<select id="selectDBAccountInfo" resultType="bankAccount">
		SELECT *
		FROM bank_account
		WHERE user_seq_no = #{user_seq_no}
	</select>
<!-- 출금결과 저장 -->
	<insert id="insertChargeResult">
		INSERT INTO bank_transaction_info 
		VALUES(
			#{transactionResult.user_seq_no}
			,#{transactionResult.fintech_use_num}
			,#{transactionType}
			,#{transactionResult.api_tran_id}
			
			,LEFT(#{transactionResult.api_tran_dtm},14)
			,#{transactionResult.bank_tran_id}
		
			,#{transactionResult.bank_tran_date}
			,#{transactionResult.tran_amt}
			,#{transactionResult.rsp_code}
			,#{transactionResult.rsp_message}
			,#{transactionResult.bank_rsp_code}
			,#{transactionResult.bank_rsp_message}
			,#{transactionResult.dps_bank_code_std}
			,#{transactionResult.dps_account_num_masked}
			,#{transactionResult.tran_id}
		
		)
	</insert>








</mapper>